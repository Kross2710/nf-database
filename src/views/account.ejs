<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Netflix Account Database</title>
    <link rel="stylesheet" type="text/css" href="style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/9ec7425c6f.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        .container {
            margin-top: 20px;
        }
        .search-container {
            margin-bottom: 20px;
        }
        .search-container input {
            width: calc(100% - 50px);
            display: inline-block;
        }
        .search-container button {
            width: 50px;
        }
        .table-container {
            margin-top: 20px;
        }
        .add-btn {
            margin-top: 20px;
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-12">
                <h1 class="text-center">Netflix Account Database</h1>
            </div>
        </div>
        <div class="row search-container">
            <div class="col-md-12">
                <form action="/search" method="GET" class="d-flex">
                    <input type="text" name="client" id="client" class="form-control me-2" placeholder="Search for clients...">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                </form>
            </div>
        </div>
        <div class="row table-container">
            <div class="col-md-12">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Client</th>
                            <th>Account</th>
                            <th>Password</th>
                            <th>User</th>
                            <th>PIN</th>
                            <th>Buy Date</th>
                            <th>Expiry Date</th>
                            <th>Note</th>
                            <th>Function</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% accounts.forEach(function(account) { %>
                            <tr>
                                <td><%= account.client %></td>
                                <td><%= account.account %></td>
                                <td><%= account.password %></td>
                                <td><%= account.profileNum %></td>
                                <td><%= account.profilePass %></td>
                                <td><%= new Date(account.buy).toLocaleDateString('en-GB') %></td>
                                <td><%= new Date(account.expire).toLocaleDateString('en-GB') %></td>
                                <td><%= account.note %></td>
                                <td>
                                    <a href="/edit/<%= account.id %>" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="/delete/<%= account.id %>" onclick="confirmDelete()" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row add-btn">
            <div class="col-md-12">
                <a href="/add" class="btn btn-success">Add Account</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+67Z8iDz9I2M7p5o76w3mM3KnwBgi" crossorigin="anonymous"></script>
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this account?');
        }
    </script>
</body>
</html>
